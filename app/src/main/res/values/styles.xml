<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ToolBar -->
    <style name="ToolBar">
        <item name="android:theme">@style/ToolBarTheme</item>
        <item name="popupTheme">@style/PopUpTheme</item>
    </style>

    <style name="ToolBarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!-- 背景色 -->
        <item name="android:background">?attr/primary_color</item>
        <!-- 主标题颜色 -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <!-- 副标题颜色, 包含3个点的颜色 -->
        <item name="android:textColorSecondary">@color/text_white</item>
        <!-- 菜单文字颜色 -->
        <item name="actionMenuTextColor">@color/text_white</item>
    </style>

    <style name="PopUpTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/material_black</item>
        <item name="android:background">@color/material_white</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">?attr/colorAccent</item>
    </style>

    <!-- Dialog -->
    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Dialog.Full">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- CardView -->
    <style name="CardView">
        <item name="cardBackgroundColor">@color/material_white</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardMaxElevation">@dimen/card_view_max_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <!-- ProgressBar -->
    <style name="ProgressBar">
        <item name="android:layout_gravity">center</item>
    </style>

</resources>