<resources>

    <!-- 基本主题 -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ToolBar和ActionBar的颜色 -->
        <item name="colorPrimary">?attr/theme_color</item>
        <!-- StatusBar颜色 -->
        <item name="colorPrimaryDark">?attr/theme_status_bar_color</item>
        <!-- 组件的强调色 -->
        <item name="colorAccent">?attr/theme_color</item>
        <!-- 背景色 -->
        <item name="android:windowBackground">@color/material_white</item>
    </style>

    <!-- 应用基本主题 -->
    <style name="AppBaseTheme" parent="BaseTheme">
        <!-- 可选item的背景 -->
        <item name="android:selectableItemBackground">@drawable/sl_item</item>
    </style>

    <!-- 默认应用主题 -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="theme_color">@color/material_blue_500</item>
        <item name="theme_status_bar_color">@color/material_blue_700</item>
    </style>

    <!-- 红色主题 -->
    <style name="AppTheme.Red">
