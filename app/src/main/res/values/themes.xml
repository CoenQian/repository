<resources>

    <!-- 基本主题 -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ToolBar的颜色 -->
        <item name="colorPrimary">?attr/primary_color</item>
        <!-- StatusBar颜色 -->
        <item name="colorPrimaryDark">?attr/secondary_color</item>
        <!-- 组件的强调色 -->
        <item name="colorAccent">?attr/primary_color</item>
        <!-- 背景色 -->
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <!-- 默认应用主题 -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- CheckBox样式 -->
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <!-- 红色主题 -->
    <style name="AppTheme.Red">
        <item name="primary_color">@color/material_red_500</item>
        <item name="secondary_color">@color/material_red_700</item>
        <item name="buttonStyle">@style/ButtonStyle.Red</item>
    </style>

